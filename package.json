{
  "name": "root",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules && rm -rf packages/**/node_modules",
    "commit": "git-cz",
    "init:commitizen": "commitizen init cz-ccgls  --yarn --dev --exact --ignore-workspace-root-check --force",
    "lint": "eslint . --ext '*/**/*.{js,ts,tsx}'",
    "lint:fix": "eslint --fix . --ext '*/**/*.{js,ts,tsx}'",
    "format": "cross-env NODE_ENV=development NODE_OPTIONS=--max_old_space_size=4096 prettier **/**/*.{js,ts,tsx} --ignore-path ./.prettierignore --write && git status",
    "seed": "cd packages/server/src && npx ts-node ./seeder",
    "start:app": "npm run build:backend && npm run seed && concurrently \"npm run start:backend\" \"NODE_ENV=development BUILD_SERVER_URL=http://localhost:3019/ npm run build:webapp && npm run start:webapp\""
  },
  "lint-staged": {
    "*.{js}": "eslint --ext .js --ignore-path .gitignore"
  },
  "config": {
    "commitizen": {
      "path": "cz-emoji"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^12.0.1",
    "commitizen": "4.1.5",
    "commitlint": "9.1.2",
    "cz-ccgls": "0.2.3",
    "cz-conventional-changelog": "3.3.0",
    "cz-emoji": "^1.3.1",
    "husky": "4.2.5",
    "lerna": "^4.0.0",
    "lint-staged": "11.1.2"
  }
}
